body { background-color: #8da79a; color: #fff; font-size: 13px; line-height: 1; }
.base-width { max-width: 1200px; min-width: 990px; margin: 0 auto; }
.page-wrapper { min-height: 100%; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; padding-bottom: 100px; }
.page { box-shadow: 0 0 4px rgba(0, 0, 0, .4); padding: 10px; border-radius: 10px; }
.footer-wrapper { height: 100px; margin-top: -100px; position: relative; }
.footer { padding: 10px 0; }
.bg-dark { background: #3c3d41; }
.bg-main { background: #8da79a; }
.bg-light { background: #fdfdfd; color: #323232; }