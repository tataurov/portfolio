
body { background-color: #8da79a; color: #fff; font-size: 14px; line-height: 1; height: 100%; }

/* main structure */
.base-width { max-width: 1200px; min-width: 990px; margin: 0 auto; }
.page-body { min-height: 100%; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; padding-bottom: 100px; }
.page { padding: 10px; }
.footer-wrapper { height: 100px; margin-top: -100px; position: relative; }
.footer { padding: 10px 0; }

/* links */
a {
	&:link,
	&:active,
	&:visited,
	&:hover { color: #fff; }
}

/* backgrounds */
.bg-dark { background: #3c3d41; }
.bg-main { background: #8da79a; }
.bg-light { background: #fdfdfd; color: #323232; }