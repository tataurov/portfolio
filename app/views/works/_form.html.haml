.form
  = form_for(@work) do |f|
    - if @work.errors.any?
      .message.error#error_explanation
        = pluralize(@work.errors.count, "error") 
        prohibited this user from being saved:
        %ul
          - @work.errors.full_messages.each do |msg|
            %li= msg 

    %ul.fields        
      %li.field
        .label-= f.label :name
        .field-= f.text_field :name
      %li.field
        .label-= f.label :url
        .field-= f.text_field :url
      %li.field
        .label-= f.label :image
        .input-= f.file_field :image
      %li.field
        .label-= f.label :remote_image_url, "or image URL"
        .input-= f.text_field :remote_image_url 
      %li.actions
        .field-= f.submit
