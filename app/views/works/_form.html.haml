.form
= form_for(@work) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error") 
        prohibited this user from being saved:

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg 
  %ul.fields        
    %li.field
      = f.label :name
      = f.text_field :name
    %li.field
      = f.label :url
      = f.text_field :url
    %li.actions
      = f.submit
